div(class='flex flex-col md:flex-row md:gap-10 md:justify-center md:items-center')
  div(class='md:pb-3')
    div(class='flex flex-row justify-between gap-3 items-baseline')
      h1 #{title || Title}
      p #{year || Year}
    img(class='rounded-md outline outline-1 md:min-w-[100%]', src=poster||Poster)
  div(class='md:h-[calc(100vh-6rem)] md:pr-[14vw] md:overflow-y-auto md:py-12 md:mt-24 md:w-full')
    #current.flex.flex-col.gap-3.relative
      p.pt-3.pb-5 #{plot || Plot}
      div(class='flex flex-col gap-3 child:flex child:flex-row md:child:flex-col md:child:justify-between child:gap-3')
        div
          h2 #{title || Title}
        div
          p Year
          p #{year || Year}
        div
          p Rated
          p #{rated || Rated}
        div
          p Runtime
          p #{runtime || Runtime}
        div
          p Genre
          p #{genre || Genre}
        div
          p Director
          p #{director || Director}
        div
          if writer && writer.includes(",")
            p Writers
          else
            p Writer
          p #{writer || Writer}